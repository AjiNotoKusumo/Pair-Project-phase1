<%- include("components/_header", { title: "My Events" }) %>
    <!-- Settings Form -->
    <div class="bg-white dark:bg-gray-900 py-8 px-4">
        <div class="max-w-4xl mx-auto">
            <div class="mb-8">
            <h1 class="text-2xl font-bold text-gray-900 dark:text-white">My Events</h1>
            <p class="mt-2 text-gray-600 dark:text-gray-400">Event you have created</p>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-5 gap-8">
            <!-- Sidebar Navigation -->
            <div class="lg:col-span-1">
                <nav class="space-y-1">
                <a href="/profile" class="text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-800 group flex items-center px-3 py-2 text-sm font-medium rounded-md">
                    <svg class="text-gray-500 dark:text-gray-400 group-hover:text-gray-700 dark:group-hover:text-gray-300 mr-3 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                    </svg>
                    Profile
                </a>
                <a href="/profile/events<%= (user.role === 'eventOrganizer')? '/event-organizer' : '' %>" class="bg-lime-50 dark:bg-lime-900/30 text-lime-700 dark:text-lime-300 group flex items-center px-3 py-2 text-sm font-medium rounded-md">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="feather feather-calendar text-lime-600 dark:text-lime-400 mr-3 h-5 w-5"><rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect><line x1="16" y1="2" x2="16" y2="6"></line><line x1="8" y1="2" x2="8" y2="6"></line><line x1="3" y1="10" x2="21" y2="10"></line></svg>
                    My Events
                </a>
                <a href="/auth/sign-out" class="text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-800 group flex items-center px-3 py-2 text-sm font-medium rounded-md">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="feather feather-log-out text-gray-500 dark:text-gray-400 group-hover:text-gray-700 dark:group-hover:text-gray-300 mr-3 h-5 w-5"><path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path><polyline points="16 17 21 12 16 7"></polyline><line x1="21" y1="12" x2="9" y2="12"></line></svg>
                    Log Out
                </a>
                </nav>
            </div>

            <!-- Main Form -->
            <div class="lg:col-span-4 ">
                <div class="bg-gray-50 dark:bg-gray-800 rounded-xl p-6 ">
                    <div class="flex items-center justify-between mb-6">
                        <h2 class="text-lg font-medium text-gray-900 dark:text-white">
                            Upcoming Events
                        </h2>

                        <a href="/events/create" class="inline-flex items-center justify-center h-9 w-9 rounded-full bg-lime-600 text-white hover:bg-lime-700 transition shadow" title="Create Event">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="feather feather-plus"><line x1="12" y1="5" x2="12" y2="19"></line><line x1="5" y1="12" x2="19" y2="12"></line></svg>
                        </a>
                </div>


      <% let month = '' %>
        <% eventsData.forEach(event => { %>
            <% if(event.formatDateName.month !== month) {%>
                <% month = event.formatDateName.month %>
                <h3 class="text-sm font-small text-gray-900 dark:text-white mb-2"><%= month %></h3>
            <%}%>

      <!-- CARD -->
      <div class="flex gap-4 bg-white rounded-xl p-4 shadow-sm hover:shadow transition mt-2 mb-2">

        <!-- Date -->
        <div class="w-16 flex flex-col items-center justify-center bg-lime-100 text-lime-700 rounded-lg">
          <span class="text-sm font-medium"><%= event.formatDateName.weekday %></span>
          <span class="text-2xl font-bold"><%= event.formatDateName.day %></span>
        </div>

        <!-- Info -->
        <div class="flex-1">
          <h3 class="font-semibold text-gray-800">
            <%= event.title %>
          </h3>

          <p class="text-sm text-gray-500 mt-1">
            <%= event.formatDate %> || <%= event.dataValues.attendeesCount %> / <%= event.capacity %>
          </p>

          <p class="text-sm text-gray-500 mt-1">
            üìç <%= event.location %>
          </p>

          <!-- Links -->
          <div class="mt-3 flex gap-4">
            <a
              href="/events/<%= event.id %>"
              class="text-sm font-medium text-lime-700 hover:text-lime-800 underline underline-offset-4"
            >
              View Event
            </a>

            <a
              href="/events/<%= event.id %>/edit"
              class="text-sm font-medium text-lime-700 hover:text-lime-800 underline underline-offset-4"
            >
              Edit Event
            </a>

            <a
              href="/events/<%= event.id %>/delete"
              class="text-sm font-medium text-red-600 hover:text-red-700 underline underline-offset-4"
            >
              Delete Event
            </a>
          </div>
        </div>

        
      </div>
      <% }) %>

    
                </div>
            </div>
            </div>
        </div>
    </div>

    <%- include("components/_footer") %>
</body>
</html>